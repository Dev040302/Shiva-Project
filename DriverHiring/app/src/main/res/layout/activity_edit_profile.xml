<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".Edit_Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Edit Text"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_baseline_menu_24"/>


        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:text="DRIVER"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/title" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_above="@id/updatebtn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="16dp"
                    android:inputType="text"
                    android:cursorVisible="false"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:hint="  Name"
                    android:padding="8dp"
                    android:background="@drawable/btn_sign_in_background"
                    android:textColorHint="@color/white"
                    android:id="@+id/name"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:inputType="phone"
                    android:cursorVisible="false"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                    android:hint="  Phone"
                    android:padding="8dp"
                    android:background="@drawable/btn_sign_in_background"
                    android:textColorHint="@color/white"
                    android:id="@+id/number"
                    android:layout_below="@id/name"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:inputType="text"
                    android:cursorVisible="false"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/ic_baseline_home_24"
                    android:hint="  Address"
                    android:padding="8dp"
                    android:background="@drawable/btn_sign_in_background"
                    android:textColorHint="@color/white"
                    android:id="@+id/address"
                    android:layout_below="@id/number"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="8dp"
                    android:inputType="text"
                    android:cursorVisible="false"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/ic_baseline_card_membership_24"
                    android:hint="  Licence No"
                    android:padding="8dp"
                    android:background="@drawable/btn_sign_in_background"
                    android:textColorHint="@color/white"
                    android:id="@+id/licence"
                    android:layout_below="@id/address"/>



            </RelativeLayout>


        </ScrollView>

        <Button
            android:id="@+id/updatebtn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#DD4B39"
            android:text="UPDATE"
            android:textColor="@color/white" />



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu_driver" />



</androidx.drawerlayout.widget.DrawerLayout>