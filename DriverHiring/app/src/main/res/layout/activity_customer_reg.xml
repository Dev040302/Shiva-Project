<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_uber_clone_driver"
    tools:context=".Customer_Reg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="CUSTOMER"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="SIGN UP"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/title1"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1"
        android:layout_above="@id/signupbtn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:hint="  Name"
                android:padding="8dp"
                android:background="@drawable/btn_sign_in_background"
                android:textColorHint="@color/white"
                android:id="@+id/name"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:inputType="textEmailAddress"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:hint="  Email"
                android:padding="8dp"
                android:background="@drawable/btn_sign_in_background"
                android:textColorHint="@color/white"
                android:id="@+id/email"
                android:layout_below="@id/name"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:inputType="phone"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                android:hint="  Phone"
                android:padding="8dp"
                android:background="@drawable/btn_sign_in_background"
                android:textColorHint="@color/white"
                android:id="@+id/number"
                android:layout_below="@id/email"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:hint="  Address"
                android:padding="8dp"
                android:background="@drawable/btn_sign_in_background"
                android:textColorHint="@color/white"
                android:id="@+id/address"
                android:layout_below="@id/number"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:hint="  Password"
                android:padding="8dp"
                android:background="@drawable/btn_sign_in_background"
                android:textColorHint="@color/white"
                android:id="@+id/password"
                android:layout_below="@id/address"/>

        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupbtn"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DD4B39"
        android:text="SIGN UP"
        android:textColor="@color/white"
        app:cornerRadius="8dp" />

</RelativeLayout>