<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">

    <EditText
        android:id="@+id/customer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/customer_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:layout_below="@+id/customer_email"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Driver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:hint="Name"
        android:layout_below="@+id/customer_password"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Driver_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:hint="Phone Number"
        android:layout_below="@+id/Driver_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/driver_car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:hint="Vehical No"
        android:layout_below="@+id/Driver_phonenumber"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/customer_login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/driver_car_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:text="Register the Driver"
        android:textSize="20sp" />

    <Button
    android:id="@+id/history"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/customer_login_btn"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="16dp"
    android:text="View History"
    android:textSize="20sp" />

</RelativeLayout>